<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <ApplicationIcon>LogoHighRes.ico</ApplicationIcon>
    <StartupObject />
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Jonathan Foot</Authors>
    <Company>Jonathan Foot</Company>
    <Product>Reading Buses API</Product>
    <Copyright>Jonathan Foot Â© 2020</Copyright>
    <PackageIcon>LogoHighRes.jpg</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/jfoot/Reading-Buses-API</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageProjectUrl>https://github.com/jfoot/Reading-Buses-API</PackageProjectUrl>
    <Description>A C# Library for the Reading Buses API (http://rtl2.ods-live.co.uk/cms/apiservice), available to use in your C# console, WPF or Win Form Applications.

Supports : List of Bus Stops, Live Vehicle Positions, Stop Predictions, List of Services and Line Patterns API.</Description>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <Version>1.0.1</Version>
    <PackageReleaseNotes>Initial Public Release.</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="LogoHighRes.jpg">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

</Project>
